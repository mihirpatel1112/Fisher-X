{
    "name": "clean-skies-dev",
    "build": { "context": "..", "dockerfile": "../docker/Dockerfile" },
    "remoteUser": "mambauser",

    "runArgs": ["--env-file", "${localWorkspaceFolder}/.env"],
    
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter",
          "ms-azuretools.vscode-docker",
          "ms-toolsai.datawrangler",
          "ms-python.vscode-pylance"
        ],
        "settings": {
          "python.defaultInterpreterPath": "/opt/conda/bin/python",
          "jupyter.jupyterServerType": "local"
        }
      }
    },
    "forwardPorts": [8000, 8501, 8888],
    "postCreateCommand": "python -c \"print('Dev container ready âœ…')\"",
    "mounts": [
      "source=${localWorkspaceFolder}/data,target=/workspaces/nasa-clean-skies/data,type=bind,consistency=cached"
    ],
    "containerEnv": {
      "PYTHONDONTWRITEBYTECODE": "1",
      "PIP_NO_CACHE_DIR": "1"
    }
  }
  
  